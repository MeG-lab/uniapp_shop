
page {
	height: 100%;
}
.pics {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	height: 100%;
}
.pics .left {
	height: 100%;
	width: 200rpx;
	border-right: 1px solid #EEEEEE;
}
.pics view {
	height: 60px;
	line-height: 60px;
	color: #333;
	text-align: center;
	font-size: 30rpx;
	border-top: 1px solid #eee;
}
.pics .active {
	background-color: #b50e03;
	color: #FFFFFF
}
.right{
	height: 100%;
	width: 520rpx;
	margin: 10rpx auto;
}
.right .item image{
	
	width: 520rpx;
	height: 520rpx;
	-webkit-border-radius: 5px;
	        border-radius: 5px;
}
.right .item text{
	font-size: 30rpx;
	line-height: 60rpx;
}

