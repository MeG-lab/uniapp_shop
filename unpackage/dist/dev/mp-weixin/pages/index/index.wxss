	margin: 10px auto;
	width: 120rpx;
	height: 120rpx;
	background-color: #b50e03;
	-webkit-border-radius: 60rpx;
	        border-radius: 60rpx;
	line-height: 120rpx;
	color: #FFFFFF;
	font-size: 50rpx;
}
.nav .nav_item .icon-tupian {
	font-size: 45rpx;
}
.nav .nav_item text {
	font-size: 30rpx;
}
